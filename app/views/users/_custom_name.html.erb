<div id="custom-name" class="fade bottom in span12">
  <div class="arrow"></div>
  <div class="popover-inner row-fluid">
    <h3 class="popnext-title">
      User Alias Name  
      <%= link_to('&times;'.html_safe, @user, id:"custom-name-close", class: "close", data:{ dismiss: "pop-display"} ) %>
    </h3>
    <div class="popover-content controls controls-row">
      <%= form_tag( updates_relationships_path, :method=>:put, :remote => true) do  %>
        <div class="input-append span12">
            <%= hidden_field_tag 'other', @user.id  %>
            <%= hidden_field_tag 'op', 5  %>
            <%= text_field_tag 'nick', nil, :placeholder => "Unique Name Required", class: "span9" %>
            <%= submit_tag "Save", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_tag do %>
$(function(){
  var pos = $("span#user-name-edit").offset();
  pos.top += 25;
  pos.left -= 100;
  $("div#custom-name").offset(pos);
});

<% end %>