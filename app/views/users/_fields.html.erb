
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :name%></div>
  <div class="span4"><%= f.text_field :name, class: "span12" %></div>
</div>
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :email %></div>
  <div class="span4"><%= f.text_field :email, class: "span12" %></div>
</div>
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :phone %></div>
  <div class="span4"><%= f.text_field :phone, class: "span12" %></div>
</div>
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :login %></div>
  <div class="span4"><%= f.text_field :login, class: "span12" %></div>
  <div class="span4"><small>Login: 6-18 chars. Only allow a-z,0-9 and ('-' or '_') once within the login</small></div>
</div>
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :password %></div>
  <div class="span4"><%= f.password_field :password, class: "span12" %></div>
</div>
<div class="row-fluid">
  <div class="span2 offset1"><%= f.label :password_confirmation, "Retype Password" %></div>
  <div class="span4"><%= f.password_field :password_confirmation, class: "span12" %></div>
</div>
<div class="row-fluid ">
  <div class="span2 offset1">
    <%=f.label :avatar, "Upload photo" %>
  </div>
  <div class="span4">
        <%= image_tag(@user.avatar.url(:large), :size => "100x100", :class => "img-polaroid" ) %><br />
        <%= f.file_field :avatar %>
  </div>
</div>

