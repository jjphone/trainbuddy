<div class="fields">
    <div><%=f.label :name, class: "label" %><%=f.text_field :name %></div>
    <div><%=f.label :email, class: "label" %><%=f.text_field :email %></div>
    <div><%=f.label :phone, class: "label" %><%=f.text_field :phone %></div>
    <div><%=f.label :login, class: "label" %><%=f.text_field :login %><br />
        <span class="smltxt">Login: 6-18 chars. Only allow a-z,0-9 and ('-' or '_') once within the login</span>
    </div>
    <div><%=f.label :password, class: "label"%><%= f.password_field :password %></div>
    <div><%=f.label :password_confirmation, "Retype Password", class: "label" %><%= f.password_field :password_confirmation %></div>
     <div>
        <div class="left" style="width:200px;">
        <%=f.label :avatar, "Upload photo", class: "label"%><br>
        <%= f.file_field :avatar %>
        </div>
        <%= image_tag(@user.avatar.url(:large), :size => "100x100") %><br>
      </div>
</div>