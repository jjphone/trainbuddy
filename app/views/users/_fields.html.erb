<table class="fields">
<tr>
  <td>
    <div><%=f.label :name %><%=f.text_field :name %></div>
    <div><%=f.label :email %><%=f.text_field :email %></div>
    <div><%=f.label :phone %><%=f.text_field :phone %></div>
    <div><%=f.label :login %><%=f.text_field :login %><br />
			<span class="smltxt">6-18 chars. Only allow a-z,0-9 and '-' or '_' once within the login</span></div>
    <div><%=f.label :password%><%= f.password_field :password %></div>
    <div><%=f.label :password_confirmation, "Retype Password" %><%= f.password_field :password_confirmation %></div>
  </td>
  <td style="vertical-align:bottom;">
    <div><%= image_tag(@user.avatar.url(:large), :size => "200x200") %></br>
        <%=f.label :avatar, "Photo Path" %><%= f.file_field :avatar %></div>
  </td>
</tr>

</table>