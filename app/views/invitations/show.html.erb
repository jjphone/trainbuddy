<% provide(:title, 'Invitated Signup') %>
<div class="row-fluid">
  <div class="span12" style="margin: 20px 10px;">
	<h1>Invitation Signup</h1>
	<p>You have been invited to signup for trainbuudy. Please fill-in the details to create your own account.</p>
  </div>
</div>


<%= form_for(@user, {url: invitation_path, method: :put} ) do |f| %>
  <%= hidden_field_tag :token_hash, @invitation.token %>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :name%></div>
    <div class="span4"><%= f.text_field :name, class: "span12" %></div>
  </div>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :email %></div>
    <div class="span4"><%= f.text_field :email, class: "span12", disabled: @invitation.recipient_email.size > 0  %></div>
  </div>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :phone %></div>
    <div class="span4"><%= f.text_field :phone, class: "span12" %></div>
  </div>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :login %></div>
    <div class="span4"><%= f.text_field :login, class: "span12" %></div>
    <div class="span4"><small>Login: 6-18 chars. Only allow a-z,0-9 and ('-' or '_') once within the login</small></div>
  </div>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :password %></div>
    <div class="span4"><%= f.password_field :password, class: "span12" %></div>
  </div>
  <div class="row-fluid">
    <div class="span2 offset1"><%= f.label :password_confirmation, "Retype Password" %></div>
    <div class="span4"><%= f.password_field :password_confirmation, class: "span12" %></div>
  </div>
  <div class="row-fluid ">
    <div class="span2 offset1">
      <%=f.label :avatar, "Upload photo" %>
    </div>
    <div class="span4">
          <%= image_tag(@user.avatar.url(:large), :size => "100x100", :class => "img-polaroid" ) %><br />
          <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="row-fluid" style="border-top: 1px solid #ccc; margin-top: 20px; padding: 20px;">
    <div class="span5 offset3" ><%= f.submit "Sign up", class: "btn btn-large btn-primary" %></div>
  </div>
<% end %>