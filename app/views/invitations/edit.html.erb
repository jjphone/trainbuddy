<% provide(:title, 'Invitation') %>

<div class="row-fluid">

  <div class="span11">
    <div class="row-fluid">
      <div class="span10 offset1">
    	<h1>Invitation</h1>
    	<p>You can edit, copy and paste the text below and <b>email it to your friend yourself</b>.</p>
      <p>Please remember when modifying, NOT to change the invitation URL as it contains the invitation code.</p>
      </div>
    </div>

    <div class="row-fluid" style="padding: 20px;">
      <div class="span10 offset1">
      	<%=text_area_tag 'invitation_message', invitation_message(@invitation.id), rows: 8, class: "span12"%>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span5 offset1" ><%=link_to "Send more invitations", new_invitation_path%></div>
      <div class="span5"><%=link_to "Profile", profile_path(current_user.id)%></div>
    </div>
  </div>

  <div class="span1" id="flash_message"><%=render 'share/flash_message'%></div>
</div>