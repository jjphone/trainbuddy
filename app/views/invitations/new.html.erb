<% provide(:title, 'New Invitations') %>
<div class="row-fluid">
  <div class="span12"><h1>New Invitations</h1></div>
</div>

  <%= form_tag invitations_path, method: :post  do %>

  <%= hidden_field_tag 'sender_id', current_user.id  %>
  <div class="row-fluid">
  	<div class="span2 offset1"><%= label_tag :email, "Recipient Email" %></div>
    <div class="span5"><%= text_field_tag :email, nil, class: "span12" %></div>
  </div>

  <% if current_user.admin? %>
  	<div class="row-fluid">
  	  <div class="span2 offset1"><%= label_tag :multiple %></div>
  	  <div class="span5"><%= text_field_tag :multiple, 1, class: "span12"%></div>
  	</div>
  <% else %>
  	<%= hidden_field_tag 'multiple', 1 %>
  <% end %>
  
  <div class="row-fluid">
  	<div class="span5 offset3" style="text-align:right">
  	  <small><%= current_user.profile.invitations%> Invitation(s) left</small>
  	</div>
  </div>

  <div class="row-fluid">
    <div class="span2 offset3"><%= submit_tag "submit",  class: "btn btn-info" %></div>
  </div>

<% end %>