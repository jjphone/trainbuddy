<!DOCTYPE html>
<html>
<head>
  <title> <%= site_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>

<body id="<%= params[:controller].parameterize %>_controller">

	<%= render 'layouts/header'%>

<div class="row">  <!-- required fixed width. left menu-->
  <!-- left Dark Bar start -->
  <div id="leftside" class="span3">
    <%= render 'share/user_info' %>
    <%= render 'share/left_options' %>
  </div>
  <!-- left Dark Bar end -->


  <!-- Right Side/Main Content start -->

  <div id="rightside" class="span8" style="border: 0px solid blue;">
    <div class="row-fluid">
      <%= render 'share/flash_message' %>
    </div>

    <div class="row-fluid">
		  <%= yield %>
    </div>

    <div style="clear:both;">
      <p></p>
    </div>
    <%= render 'layouts/footer' %>
  </div>
</div>
  <!-- Right Side/Main Content End -->



</div> <!-- row -->

</body>
</html>
