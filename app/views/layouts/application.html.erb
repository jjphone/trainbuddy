<!DOCTYPE html>
<html>
<head>
  <title> <%= site_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>

<body id="<%= params[:controller].parameterize %>_controller">
	<%= render 'layouts/header'%>
<div class="row-fluid">

  <!-- left Dark Bar start -->
  <div id="leftside" class="span2 fill">
      &nbsp;
  </div>
  <!-- left Dark Bar end -->


  <!-- Right Side/Main Content start -->
  <div id="rightside" class="span8" >
    <div class="row-fluid">
      <%= render 'share/flash_message' %>
    </div>

    <div class="row-fluid">
		  <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </div>
  <!-- Right Side/Main Content End -->


</div><!-- row -->
</body>
</html>
