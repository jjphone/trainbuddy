<!DOCTYPE html>
<html>
<head>
  <title> <%= site_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- render 'layouts/shim' -->
</head>

<body id="<%= params[:controller].parameterize %>_controller">

  <%= render 'layouts/header'%>


  <div class="row-fluid">

    <!-- left Dark Bar start -->
    <div id="leftside" class="span2 "><%= render 'layouts/left_options' %></div>
    <!-- left Dark Bar end -->

    <!-- Main content start -->
    <div id="main" class="span10">
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
    <!-- Main content End -->

  </div><!-- row -->
</body>
</html>
