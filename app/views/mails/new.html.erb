<div class="span12">

  <div class="row-fluid"> 
    <div class="span6 offset1"><h2>Compose</h2></div>
  </div>

  <div class="row-fluid">
    <%= form_for( @mail,  url: { action: "create" }, class: "span9 offset1" ) do |f| %>
      <div class="row-fluid">
        <%= f.label :to_users, "To", class: "span2 offset1"%>
        <div class="span7">
          <%= f.text_field :to_users, data: {load: @mail.to_users_json } %>
        </div>
      </div>
    
      <div class="row-fluid">
        <%= f.label :subj, "Subj :", class: "span2 offset1" %>
        <div class="span7">
          <%= f.text_field :subj, value: @mail.subj, class: "span12" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span2 offset1">
          Chars Left
          <div id="mail_body_counts"><%= 254 - @mail.body.length %></div>
        </div>
        <div class="span7"><%= f.text_area :body, value: @mail.body, rows: 8, class: "span12" %></div>
      </div>

      <div class="row-fluid">
        <div class="span2 offset3"><%= submit_tag "Send", class: "btn btn-primary" %></div>
        <div class="span2"><input type="reset" id="clear" value="Clear", class="btn" ></div>
      </div>

    <% end %>
  </div>
    

  <p><%= debug(params) if Rails.env.development? %></p>

</div>









