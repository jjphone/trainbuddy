<%= form_tag( updates_relationships_path, method: :put, remote: true) do  %>
  <%= link_to("Accept Friend", user_url(@user,relation: "accept"), id: "href-accept", class: "btn btn-small" ) %>
  
  <%= render 'relationships/pop-accept' %>

<% end %>

<% if params[:relation]=="accept" %>
  <% javascript_tag do %> 
    $(function(){
  	  $("div#pop-accept").slideDown("slow", "swing");
  	  return false;
  	});
  <% end %>
<% end %>