<%= form_tag( updates_relationships_path, method: :put, remote: true ) do  %>
  <%= hidden_field_tag 'other', @user.id  %>
  <%= hidden_field_tag 'op', 1 %>

  <%= link_to(user_url(@user, relation: "request"), id: "href-request", class: "btn" ) do%>
    <% if @relation && @relation.status == 1 %>Resent Request<% else %>Add as Friend<% end %>
  <% end %>

  <% if params[:relation]=="request" %>
    <%= render 'relationships/pop-request' %>
  <% end %>

<% end %>

