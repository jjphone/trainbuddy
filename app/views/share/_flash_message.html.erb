<div id="flash-message" class="span8" >
<% flash.each do |key, value| %>
  <div class="alert <%= "alert-" + key.to_s.downcase %>">
  	<%= link_to('&times;'.html_safe, request.url, id:"flash-message-close", class: "close", data:{ dismiss: "flash-message"} ) %>
	<h4><%= key %></h4>
	<p><%= raw(value) %></p>
  </div>
<% end %>
</div>
